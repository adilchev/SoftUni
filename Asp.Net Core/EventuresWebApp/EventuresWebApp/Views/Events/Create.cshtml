@model EventuresWebApp.Services.Models.EventCreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-2 col-md-7">
        <h2 class="text-center" style="font-weight: bold">Create Event</h2>
        <hr class="bg-eventure hr-2" />
        <form asp-route-returnUrl="/" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="Place"></label>
                        <input asp-for="Place" class="form-control" placeholder="Place..." />
                        <span asp-validation-for="Place" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr class="bg-eventure hr-2" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="Start"></label>
                        <input asp-for="Start" class="form-control" placeholder="01-Jan-2018 12:00" />
                        <span asp-validation-for="Start" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="End"></label>
                        <input asp-for="End" class="form-control" placeholder="01-Jan-2018 12:00" />
                        <span asp-validation-for="End" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr class="bg-eventure hr-2" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="TotalTickets"></label>
                        <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets..." />
                        <span asp-validation-for="TotalTickets" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="PricePerTicket"></label>
                        <input asp-for="PricePerTicket" class="form-control" placeholder="Price Per Ticket..." />
                        <span asp-validation-for="PricePerTicket" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr class="bg-eventure hr-2" />
            <div class="form-group text-center">
                <button type="submit" class="btn btn-default bg-eventure">Create Event</button>
            </div>
        </form>
    </div>
</div>

